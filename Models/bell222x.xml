  <!-- Porte avant gauche -->
  <animation>
    <name>PorteAvantGauche</name>
    <object-name>porteG</object-name>
    <object-name>vitreG</object-name>
  </animation>

  <animation>
    <type>rotate</type>
    <object-name>PorteAvantGauche</object-name>
    <property>/instrumentation/doors/crew/position-norm</property>
    <factor> -60 </factor>
    <axis>
      <x1-m> -3.850 </x1-m>
      <y1-m> -0.899 </y1-m>
      <z1-m> -0.909 </z1-m>
      <x2-m> -3.850 </x2-m>
      <y2-m> -0.962 </y2-m>
      <z2-m> -0.474 </z2-m>
    </axis>
  </animation>

  <!-- Porte avant droite -->
  <animation>
    <name>PorteAvantDroite</name>
    <object-name>porteD</object-name>
    <object-name>vitreD</object-name>
  </animation>

  <animation>
    <type>rotate</type>
    <object-name>PorteAvantDroite</object-name>
    <property>/instrumentation/doors/crew/position-norm</property>
    <factor> 60 </factor>
    <axis>
      <x1-m> -3.850 </x1-m>
      <y1-m>  0.899 </y1-m>
      <z1-m> -0.909 </z1-m>
      <x2-m> -3.850 </x2-m>
      <y2-m>  0.962 </y2-m>
      <z2-m> -0.474 </z2-m>
    </axis>
  </animation>

  <!-- Ajout des effets lumineux -->
