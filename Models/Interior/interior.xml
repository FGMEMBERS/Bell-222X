<?xml version="1.0" encoding="UTF-8"?>

<PropertyList>

  <path>interior.ac</path>

  <animation>
    <!-- Objets opaques -->
    <object-name>interieur</object-name>
    <object-name>inttour</object-name>
    <object-name>intporteG</object-name>
    <object-name>intporteD</object-name>

    <!-- Objets transparents -->
    <object-name>intvitres</object-name>
    <object-name>intvitreG</object-name>
    <object-name>intvitreD</object-name>
  </animation>

  <animation>
    <type>shader</type>
    <shader>chrome</shader>
    <texture>Aircraft/Generic/Effects/glass_shader.png</texture>
    <object-name>intvitres</object-name>
    <object-name>intvitreG</object-name>
    <object-name>intvitreD</object-name>
  </animation>

  <animation>
    <type>noshadow</type>
    <object-name>intvitres</object-name>
    <object-name>intvitreG</object-name>
    <object-name>intvitreD</object-name>
  </animation>

  <!-- Planche de bord -->
  <model>
    <path>Aircraft/Bell-222X/Models/Interior/Panel/panel.xml</path>
    <offsets>
      <x-m> -3.887 </x-m>
      <y-m>  0.000 </y-m>
      <z-m> -0.590 </z-m>
      <roll-deg>    0 </roll-deg>
      <pitch-deg>   0 </pitch-deg>
      <heading-deg> 0 </heading-deg>
    </offsets>
  </model>

  <!-- Pilote -->
  <model>
    <path>Aircraft/Bell-222X/Models/Pilot/pilot.xml</path>
    <offsets>
      <x-m> -3.074 </x-m>
      <y-m>  0.498 </y-m>
      <z-m> -0.315 </z-m>
    </offsets>
  </model>

  <!-- Porte avant gauche -->
  <animation>
    <name>IntPorteAvantGauche</name>
    <object-name>intporteG</object-name>
    <object-name>intvitreG</object-name>
  </animation>

  <animation>
    <type>rotate</type>
    <object-name>IntPorteAvantGauche</object-name>
    <property>/instrumentation/doors/crew/position-norm</property>
    <factor> -60 </factor>
    <axis>
      <x1-m> -3.850 </x1-m>
      <y1-m> -0.899 </y1-m>
      <z1-m> -0.909 </z1-m>
      <x2-m> -3.850 </x2-m>
      <y2-m> -0.962 </y2-m>
      <z2-m> -0.474 </z2-m>
    </axis>
  </animation>

  <!-- Porte avant droite -->
  <animation>
    <name>IntPorteAvantDroite</name>
    <object-name>intporteD</object-name>
    <object-name>intvitreD</object-name>
  </animation>

  <animation>
    <type>rotate</type>
    <object-name>IntPorteAvantDroite</object-name>
    <property>/instrumentation/doors/crew/position-norm</property>
    <factor> 60 </factor>
    <axis>
      <x1-m> -3.850 </x1-m>
      <y1-m>  0.899 </y1-m>
      <z1-m> -0.909 </z1-m>
      <x2-m> -3.850 </x2-m>
      <y2-m>  0.962 </y2-m>
      <z2-m> -0.474 </z2-m>
    </axis>
  </animation>

</PropertyList>

